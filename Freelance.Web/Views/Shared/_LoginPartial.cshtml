@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated)
{



    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li>
                <div style="padding:15px 0px 0px 6px;color:white">
                    @String.Format("Здравствуйте, {0}!", Session["UserName"])
                </div>
            </li>
            <li>
                <div class="dropdown" style="padding:15px 0px 0px 6px;">
                    <a class="dropdown-toggle btn-lg" data-toggle="dropdown" href="#" style="color:aliceblue">
                        <span class="glyphicon glyphicon-user"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Менеджер", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                        <li class="divider"></li>
                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
                    </ul>
                </div>
            </li>
        </ul>

    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <div class="dropdown nav navbar-nav navbar-right" style="padding:15px 0px 0px 6px;">
                <a class="dropdown-toggle btn-lg" data-toggle="dropdown" href="#" style="color:aliceblue">
                    <span class="glyphicon glyphicon-user"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    <li>@Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                </ul>
            </div>
        </li>
    </ul>

}
