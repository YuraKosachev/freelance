@model PagginationModelList<ProfileViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}


<div class="page-header">
    <h1>Профили</h1>
</div>

@Html.Partial("_OfferCreatePartial")
<div class="row">
    <div class="col-lg-5 col-xs-12">
        <form role="form">
            <div class="form-group">
                @*<div class="row">
                    <div class="col-lg-12">*@
                        <div class="input-group" style="outline:1px solid blue">
                            <input type="text" name="Search" class="form-control" style="outline:1px solid red" placeholder="Search">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Go!</button>
                            </span>
                        </div>
                        @*</div>
                    </div>*@
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model=>model.IndexState.SearchString,new { @class= "form-control" })
                    </div>

</form>
    </div>
    <div class="col-lg-7 col-xs-12">
        <table class="table">
            <tr>
                <th>
                    Категории
                </th>
                <th>
                </th>
                <th>
                    Время доступности
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.PageList)
            {
                <tr>


                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>

                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-sm" data-container="body" data-toggle="popover" data-placement="left" data-content="@item.PhoneNumber">
                                <span class="glyphicon glyphicon-phone"></span>
                            </button>
                            <button type="button" class="btn btn-default btn-sm" data-container="body" data-toggle="popover" data-placement="bottom" data-content="@item.FreelancerName">
                                <span class="glyphicon glyphicon-user"></span>
                            </button>
                            <button type="button" class="btn btn-default btn-sm" data-container="body" data-toggle="popover" data-placement="right" data-content="@item.DescriptionProfile">
                                <span class="glyphicon glyphicon-question-sign"></span>
                            </button>
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeAvailability)
                    </td>

                    <td>

                        <button class="btn btn-success btn-sm" data-offer-modal="#OfferCreate" data-profile-id="@item.Id">
                            <span class="glyphicon glyphicon-plus"></span>
                            Бронировать
                        </button>

                    </td>
                </tr>
            }

        </table>
    </div>
    </div>
    <br />
    Страница @(Model.PageList.PageCount < Model.PageList.PageNumber ? 0 : Model.PageList.PageNumber) из @Model.PageList.PageCount

    @Html.PagedListPager(Model.PageList, page => Url.ActionToPage("Index", Model.IndexState, page))


