@model PagedList.IPagedList<Freelance.Web.Models.ProfileViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.Partial("_OfferCreatePartial")
<table class="table">
    <tr>
        <th>
           Имя Фрилансера
        </th>
        <th>
           Название категории
        </th>
        <th>
            Описания профиля
        </th>
        <th>
            Номер телефона
        </th>
        <th>
            Время доступности
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.FreelancerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescriptionProfile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeAvailability)
        </td>
        <td>
            <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#OfferCreate">
                Бронировать
            </button>
                @*@Html.ActionLink("Бронировать", "Create", "Offer", new { profileId = item.Id }, new { })*@
        </td>
    </tr>
}

</table>
<br/>
Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
